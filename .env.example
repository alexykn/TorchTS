# TorchTS Backend Configuration

# Model Management Settings
# Time in seconds before unloading the model from memory due to inactivity
# Default: 300 (5 minutes)
MODEL_UNLOAD_TIMEOUT=300

# Device to load the model on ('cuda', 'cpu', or leave empty for auto-detection)
# Default: auto-detect (cuda if available, otherwise cpu)
MODEL_DEVICE=

# Database Configuration
# SQLite database URL (default: sqlite:///data/torchts.db)
TORCHTS_DB_URL=sqlite:///data/torchts.db

# Server Configuration
# Host and port for the FastAPI server
SERVER_HOST=0.0.0.0
SERVER_PORT=5005

# Logging Configuration
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Memory Management
# Force garbage collection after each request (true/false)
FORCE_GC_AFTER_REQUEST=false

# CUDA Settings (if using GPU)
# Clear CUDA cache after model unload (true/false)
CLEAR_CUDA_CACHE=true